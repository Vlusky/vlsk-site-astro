---
import '../styles/global.css'
import Navigation from '../components/Navigation.astro'

// declare default props inside the destructure thing
// also maybe multi line the declaration for multiple props maybe cool?
const {
    pageTitle = 'no title',
    display = 'flex',
    backgroundStyle = "black" //ohBoyAnotherOne
} = Astro.props
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
    <title>{pageTitle}</title>
    <style define:vars={{backgroundStyle}}>
      #page {
        background: var(--backgroundStyle);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        margin-left: 2rem;
      }

      .flex {
        display: flex;
        padding-left: 10rem;
        padding-right: 10rem;
        flex-direction: column;
        justify-content: center;
      }
      
      .f-center {
        align-items:center;
      }
      
      .full-screen {
        padding: 0 !important;
      }
      .block {
        display: flex;
        padding: 2rem 10rem;
        flex-direction: column;
        justify-content: start;
      }


      @media only screen and (max-width: 849px) {
        .block {
          padding: 0rem 0rem;
        }

        .flex {
          padding: 0rem;
        }
      }
    </style>
  </head>
  <body>
    <Navigation currentPage={pageTitle}/>
    <div id="page" class={display}>
      <slot />
    </div>
  </body>
</html>